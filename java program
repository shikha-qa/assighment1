package assignment;
import java.util.*;
// area calculation
public class Area {


public static void main(String[] args) {

String shape;
Scanner scan = new Scanner(System.in);
shape = scan.next();
Area a = new Area();
if(shape.equalsIgnoreCase("CIRCLE")) {
System.out.println("AREA IS" + a.circle());
}
else if(shape.equalsIgnoreCase("RECTANGLE")) {
System.out.println("AREA IS" + a.rectangle());
}
else if(shape.equalsIgnoreCase("SQUARE")) {
System.out.println("AREA IS" + a.square());
}
else if(shape.equalsIgnoreCase("TRIANGLE")) {
System.out.println("AREA IS" + a.triangle());
}
else {
System.out.println("Wrong input");
}

}

public float circle() {
int side;
Scanner scan = new Scanner(System.in);
side = scan.nextInt();
return 22*side*side/7;
}

public int rectangle() {
int length, breadth;
Scanner scan = new Scanner(System.in);
length = scan.nextInt();
breadth =scan.nextInt();
return length*breadth;
}

public int square() {
int side;
Scanner scan = new Scanner(System.in);
side = scan.nextInt();
return side*side;
}

public float triangle() {
int altitude, base;
Scanner scan = new Scanner(System.in);
altitude = scan.nextInt();
base = scan.nextInt();
return (base*altitude/2);
}

}
